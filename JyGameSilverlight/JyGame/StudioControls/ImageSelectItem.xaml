<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="JyGame.ImageSelectItem"
	d:DesignWidth="640" d:DesignHeight="480" Width="400" Height="100">

	<Grid x:Name="LayoutRoot">
		<Image x:Name="Image" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Stretch="Fill"/>
		<TextBlock x:Name="InfoText" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFFF0404" Height="21" Width="380"/>
	</Grid>
</UserControl>