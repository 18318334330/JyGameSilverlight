<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="JyGame.UserControls.SelectBox"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Width="800" Height="600" Opacity="1" Cursor="Hand">
    
    <Canvas Margin="0,0,106,265" Width="800" Height="600">
        <Image Source="/Resource/ui/info.png" Canvas.Left="150" Canvas.Top="139" Width="509" Height="134" Stretch="UniformToFill" Opacity="0.8"></Image>
        <TextBlock Name="title" Text="选项" Canvas.Left="162" Canvas.Top="154" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Width="482" Height="30" TextAlignment="Center" Foreground="White" >
        	<TextBlock.Effect>
        		<DropShadowEffect/>
        	</TextBlock.Effect>
        </TextBlock>
        <Button Name="yes" Height="34" Width="100" Canvas.Left="250" Canvas.Top="204" Content="是" Click="yes_Click" BorderBrush="Black" Background="Black" BorderThickness="3"></Button>
        <Button Name="no" Height="34" Width="100" Canvas.Left="450" Canvas.Top="204" Content="否" Click="no_Click" Background="Black" Foreground="Black" BorderBrush="Black" BorderThickness="3"></Button>
    </Canvas>
</UserControl>
