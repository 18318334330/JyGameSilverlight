<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="JyGame.ItemUnit"
	d:DesignWidth="640" d:DesignHeight="480" Width="50" Height="50" BorderThickness="5">
	<Canvas d:LayoutOverrides="HorizontalAlignment, VerticalAlignment">
		<Image x:Name="image" Height="50" Width="50"/>
		<Rectangle Fill="#B2000000" Height="17" Stroke="Black" Width="50" Opacity="0.33" StrokeThickness="0"/>
		<TextBlock x:Name="count" Height="15" Canvas.Left="6" TextWrapping="Wrap" Canvas.Top="30" Width="41" TextAlignment="Right" Foreground="#FFF1FF00" FontWeight="Bold" FontSize="16"/>
		<Rectangle x:Name="BianKuang" Fill="#00F4F4F5" Height="50" StrokeThickness="2" Width="50" Stroke="Gray"/>
		<TextBlock x:Name="name" Height="15" TextWrapping="Wrap" Width="44" Foreground="White" Canvas.Top="2" Canvas.Left="3" Text="Name"/>
	</Canvas>
</UserControl>