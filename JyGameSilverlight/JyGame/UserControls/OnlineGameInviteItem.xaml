<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="JyGame.OnlineGameInviteItem"
	d:DesignWidth="640" d:DesignHeight="480" Width="130" Height="80">

	<Grid x:Name="LayoutRoot">
		<Grid.Background>
			<ImageBrush Stretch="Fill" ImageSource="/Resource/ui/UI-focus-kuang.png"/>
		</Grid.Background>
		<TextBlock x:Name="infoText" TextWrapping="Wrap" Text="XX邀请您进行游戏是否接受?" Margin="16,16,18,29" Foreground="#FFFDA200"/>
		<Button x:Name="okButton" Content="√" Height="25" Margin="51,0,52,10" VerticalAlignment="Bottom" Click="okButton_Click"/>
		<Button x:Name="cancelButton" Content="X" Height="25" Margin="0,0,22,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="27" Click="cancelButton_Click"/>
		<TextBlock x:Name="timeText" Height="25" TextWrapping="Wrap" Text="10" VerticalAlignment="Bottom" Foreground="#FFF100FF" FontSize="18.667" Margin="18,0,0,8" FontWeight="Bold" HorizontalAlignment="Left" Width="29"/>
	</Grid>
</UserControl>