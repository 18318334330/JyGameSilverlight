<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="JyGame.SuggestTip"
	d:DesignWidth="640" d:DesignHeight="480" Width="300" Height="200" Opacity="0.85">

	<Grid x:Name="LayoutRoot">
		<Grid.Background>
			<ImageBrush Stretch="Fill" ImageSource="/Resource/ui/info.png"/>
		</Grid.Background>
		<TextBlock Height="33" Margin="27,8,0,0" TextWrapping="Wrap" Text="金庸群侠传X 小贴士" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Left" FontWeight="Bold" Width="232" Foreground="White">
			<TextBlock.Effect>
				<DropShadowEffect ShadowDepth="3"/>
			</TextBlock.Effect>
		</TextBlock>
		<TextBlock x:Name="content" Margin="27,59,25,63" TextWrapping="Wrap" FontSize="13.333" FontWeight="Bold" Foreground="#FF0674EF"/>
		<Button x:Name="nextButton" Content="下一条" HorizontalAlignment="Right" Height="23" Margin="0,0,25,10" VerticalAlignment="Bottom" Width="64" Click="nextButton_Click" BorderThickness="3"/>
	</Grid>
</UserControl>